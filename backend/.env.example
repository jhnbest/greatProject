# NVR设备监控系统 - 环境配置
# 请复制此文件为 .env 并修改配置

# 服务器配置
NODE_ENV=development
PORT=3000
FRONTEND_URL=http://localhost:8080

# 达梦数据库配置
DB_HOST=localhost
DB_PORT=5236
DB_USER=SYSDBA
DB_PASSWORD=SYSDBA
DB_NAME=NVR_MONITOR

# JWT认证配置
JWT_SECRET=nvr-monitor-secret-key-2024
TOKEN_EXPIRES_IN=24h

# 加密配置
ENCRYPTION_KEY=nvr-monitor-encryption-key
ENCRYPTION_IV=1234567890123456

# 日志配置
LOG_LEVEL=info

# 数据采集配置
DATA_COLLECTION_INTERVAL=30000
ALARM_CHECK_INTERVAL=10000

# 设备连接超时配置
DEVICE_CONNECT_TIMEOUT=10000
DEVICE_REQUEST_TIMEOUT=15000
